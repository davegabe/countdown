<body>
    <div class="section fullscreen has-background-dark is-bold has-text-black">
        <div class="section is-completely-center mainBox">
            <div class="box">
                <center>
                    <h1 class="title is-2">{{title}}</h1>
                    <h2 class="subtitle is-4">{{description}}</h2>
                    <hr/>
                    <div class="columns" id="clock">
                        <div class="box column clockBlock">
                            <h2 id="days" class="title is-4"></h2>
                            <h3 class="subtitle is-5">Days</h3>
                        </div>
                        <div class="box column clockBlock">
                            <h2 id="hours" class="title is-4"></h2>
                            <h3 class="subtitle is-5">Hours</h3>
                        </div>
                        <div class="box column clockBlock">
                            <h2 id="minutes" class="title is-4"></h2>
                            <h3 class="subtitle is-5">Minutes</h3>
                        </div>
                        <div class="box column clockBlock">
                            <h2 id="seconds" class="title is-4"></h2>
                            <h3 class="subtitle is-5">Seconds</h3>
                        </div>
                    </div>
                </center>
            </div>
        </div>
    </div>
</body>
<script src="/js/countdown.js"></script>
<script id="start">
    run_clock("clock", "{{date}}")
</script>